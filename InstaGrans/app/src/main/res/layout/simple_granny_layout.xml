<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="100dp"
    android:orientation="horizontal"
    tools:layout_editor_absoluteX="35dp"
    tools:layout_editor_absoluteY="1dp"
    android:background="@drawable/layout_round_edges20dp"
    android:theme="@style/cocontainer"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:theme="@style/container"
        android:background="@drawable/layout_round_edges50dp">

        <ImageView
            android:id="@+id/my_image_view"
            android:layout_width="80dp"
            android:layout_height="80dp"
            tools:src="@tools:sample/avatars"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/rounded_image" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bernadette" />
                <TextView
                    android:id="@+id/age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="17ans"
                    android:layout_marginStart="10dp" />

            </LinearLayout>

            <RatingBar
                android:id="@+id/rating_simple"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:isIndicator="true"
                android:numStars="5"
                android:progressTint="@color/courge"
                android:rating="2.5"
                android:scaleX="0.5"
                android:scaleY="0.5"
                android:secondaryProgressTint="#00FFFFFF"
                android:stepSize="0.01" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>