<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/layout_round_edges20dp_grey">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/layout_round_edges20dp_white">

        <ImageView
            android:id="@+id/grannyPic"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/grannyName"
            android:layout_width="56dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Ginette"
            android:textAlignment="center"
            android:textColor="@color/courge"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/achievementText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="18sp"
            android:text="a appris à faire de la Paëlla" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@drawable/layout_round_edges20dp_white"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        >

        <ImageView
            android:id="@+id/likeIcon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            tools:srcCompat="@drawable/like" />

        <TextView
            android:id="@+id/nbLikes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2.5k"
            android:textSize="20sp"
            android:textColor="@color/courge"/>

        <ImageView
            android:id="@+id/viewsIcon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            tools:srcCompat="@drawable/views" />

        <TextView
            android:id="@+id/nbViews"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/courge"
            android:textSize="20sp"
            android:text="5k" />

        <ImageView
            android:id="@+id/profileIcon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="60dp"
            tools:srcCompat="@drawable/profile" />
    </LinearLayout>
</LinearLayout>